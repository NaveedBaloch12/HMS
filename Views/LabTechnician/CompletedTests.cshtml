@model IEnumerable<HMS.Entites.LabResult>

@{
    ViewData["Title"] = "Task Result";
}

<h1>Completed Tests</h1>
<table class="table">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Test</th>
            <th>Result</th>
            <th>Date Performed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model)
        {
            <tr>
                <td>@result.Patient.Name</td>
                <td>@result.TestName</td>
                <td>@result.Result</td>
                <td>@result.PerformedDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>