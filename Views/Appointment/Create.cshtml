@model HMS.Entites.Appointment

@{
    ViewData["Title"] = "Create";
}

<h1>Create Appointment</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="PatientId" class="form-label">Select Patient</label>
        <select asp-for="PatientId" asp-items="@(new SelectList(ViewBag.Patients, "Id", "Name"))" class="form-select select2"></select>
    </div>
    <div class="mb-3">
        <label for="DoctorId" class="form-label">Select Doctor</label>
        <select asp-for="DoctorId" asp-items="@(new SelectList(ViewBag.Doctors, "Id", "Name"))" class="form-select select2"></select>
    </div>
    <div class="mb-3">
        <label asp-for="AppointmentDate" class="form-label">Appointment Date</label>
        <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Appointment</button>
</form>


<script>
    $(document).ready(function () {
        // Initialize Select2 on elements with the class 'select2'
        $('.select2').select2({
            placeholder: "Search and select",
            allowClear: true
        });
    });
</script>