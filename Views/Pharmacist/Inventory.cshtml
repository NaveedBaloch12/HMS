@model IEnumerable<HMS.Entites.PharmacyInventory>


@{
    ViewData["Title"] = "Inventory";
}

<div class="container mt-4">
    <h2>Medicine Inventory</h2>

    <div>
        <a class="btn btn-primary" asp-controller="Pharmacist" asp-action="AddNew">Add Medicine</a>
    </div>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Medicine Name</th>
                <th>Stock Quantity</th>
                <th>Price Per Unit</th>
                <th>Expiry Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medicine in Model)
            {
                <tr>
                    <td>@medicine.MedicineName</td>
                    <td>@medicine.StockQuantity</td>
                    <td>@medicine.PricePerUnit</td>
                    <td>@medicine.ExpiryDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="AddNew" asp-controller="Pharmacist" asp-route-ID="@medicine.Id">Edit</a>
                        <a asp-action="Delete" asp-controller="Pharmacist" asp-route-ID="@medicine.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
